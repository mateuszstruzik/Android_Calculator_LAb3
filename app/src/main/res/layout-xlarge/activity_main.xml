<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mati.calculator.MainActivity"
    android:id="@+id/activity_main_done"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="80dp">


    <TextView
        android:id="@+id/calculationView"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:text="TextView"
        android:textSize="24sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/historyView" />

    <TextView
        android:id="@+id/historyView"
        android:layout_width="0dp"
        android:layout_height="86dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/b7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/seven"
        android:textSize="12sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/b8"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/calculationView" />

    <Button
        android:id="@+id/b8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/eight"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b7"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@+id/b7"
        app:layout_constraintRight_toLeftOf="@+id/b9" />

    <Button
        android:id="@+id/b9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/nine"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b8"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@+id/b8"
        app:layout_constraintRight_toLeftOf="@+id/bclear" />

    <Button
        android:id="@+id/bclear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/clear"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b9"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@+id/b9"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/b4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/four"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/b5"
        app:layout_constraintTop_toBottomOf="@+id/b7" />

    <Button
        android:id="@+id/b5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/fife"
        app:layout_constraintBaseline_toBaselineOf="@+id/b4"
        app:layout_constraintLeft_toRightOf="@+id/b4"
        app:layout_constraintRight_toLeftOf="@+id/b6" />

    <Button
        android:id="@+id/b6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/six"
        app:layout_constraintBaseline_toBaselineOf="@+id/b5"
        app:layout_constraintLeft_toRightOf="@+id/b5"
        app:layout_constraintRight_toLeftOf="@+id/bdivide" />

    <Button
        android:id="@+id/bdivide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/divide"
        app:layout_constraintBaseline_toBaselineOf="@+id/b6"
        app:layout_constraintLeft_toRightOf="@+id/b6"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/b1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/b2"
        app:layout_constraintTop_toBottomOf="@+id/b4" />

    <Button
        android:id="@+id/b2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/two"
        app:layout_constraintBaseline_toBaselineOf="@+id/b1"
        app:layout_constraintLeft_toRightOf="@+id/b1"
        app:layout_constraintRight_toLeftOf="@+id/b3" />

    <Button
        android:id="@+id/b3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/three"
        app:layout_constraintBaseline_toBaselineOf="@+id/b2"
        app:layout_constraintLeft_toRightOf="@+id/b2"
        app:layout_constraintRight_toLeftOf="@+id/bplus" />

    <Button
        android:id="@+id/bplus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/plus"
        app:layout_constraintBaseline_toBaselineOf="@+id/b3"
        app:layout_constraintLeft_toRightOf="@+id/b3"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/bplusminus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/plusminus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/b0"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <Button
        android:id="@+id/b0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        app:layout_constraintLeft_toRightOf="@+id/bplusminus"
        app:layout_constraintRight_toLeftOf="@+id/bcoma"
        app:layout_constraintBaseline_toBaselineOf="@+id/bplusminus" />

    <Button
        android:id="@+id/bcoma"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/coma"
        app:layout_constraintBaseline_toBaselineOf="@+id/b0"
        app:layout_constraintLeft_toRightOf="@+id/b0"
        app:layout_constraintRight_toLeftOf="@+id/bminus" />

    <Button
        android:id="@+id/bminus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/minus"
        app:layout_constraintBaseline_toBaselineOf="@+id/bcoma"
        app:layout_constraintLeft_toRightOf="@+id/bcoma"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/b1bux"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/byx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bsqrt"
        app:layout_constraintTop_toBottomOf="@+id/bplusminus"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bsqrt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sqrt"
        app:layout_constraintBaseline_toBaselineOf="@+id/b1bux"
        app:layout_constraintLeft_toRightOf="@+id/b1bux"
        app:layout_constraintRight_toLeftOf="@+id/bmultiple" />

    <Button
        android:id="@+id/bmultiple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/multi"
        app:layout_constraintBaseline_toBaselineOf="@+id/bsqrt"
        app:layout_constraintLeft_toRightOf="@+id/bsqrt"
        app:layout_constraintRight_toLeftOf="@+id/bequals" />

    <Button
        android:id="@+id/bequals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/equal"
        app:layout_constraintBaseline_toBaselineOf="@+id/bmultiple"
        app:layout_constraintLeft_toRightOf="@+id/bmultiple"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
