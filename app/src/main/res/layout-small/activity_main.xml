<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mati.calculator.MainActivity"
    android:id="@+id/activity_main_done"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="80dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="80dp">


    <TextView
        android:id="@+id/calculationView"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_editor_absoluteY="5dp" />

    <Button
        android:id="@+id/b7"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="7"
        android:textSize="8sp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/b8"
        app:layout_constraintTop_toBottomOf="@+id/calculationView" />

    <Button
        android:id="@+id/b8"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="8"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b7"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@+id/b7"
        app:layout_constraintRight_toLeftOf="@+id/b9" />

    <Button
        android:id="@+id/b9"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="9"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b8"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@+id/b8"
        app:layout_constraintRight_toLeftOf="@+id/bclear" />

    <Button
        android:id="@+id/bclear"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="CE"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b9"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@+id/b9"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/b4"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="6"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/b5"
        app:layout_constraintTop_toBottomOf="@+id/b7" />

    <Button
        android:id="@+id/b5"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="5"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b4"
        app:layout_constraintLeft_toRightOf="@+id/b4"
        app:layout_constraintRight_toLeftOf="@+id/b6" />

    <Button
        android:id="@+id/b6"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="4"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b5"
        app:layout_constraintLeft_toRightOf="@+id/b5"
        app:layout_constraintRight_toLeftOf="@+id/bdivide" />

    <Button
        android:id="@+id/bdivide"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="/"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b6"
        app:layout_constraintLeft_toRightOf="@+id/b6"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/b1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="1"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/b2"
        app:layout_constraintTop_toBottomOf="@+id/b4" />

    <Button
        android:id="@+id/b2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="2"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/b1"
        app:layout_constraintRight_toLeftOf="@+id/b3" />

    <Button
        android:id="@+id/b3"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="3"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b2"
        app:layout_constraintLeft_toRightOf="@+id/b2"
        app:layout_constraintRight_toLeftOf="@+id/bplus" />

    <Button
        android:id="@+id/bplus"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="+"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b3"
        app:layout_constraintLeft_toRightOf="@+id/b3"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/b0"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="0"
        android:textSize="8sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bcoma"
        app:layout_constraintTop_toBottomOf="@+id/b1" />

    <Button
        android:id="@+id/bcoma"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text=","
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/b0"
        app:layout_constraintLeft_toRightOf="@+id/b0"
        app:layout_constraintRight_toRightOf="@+id/bminus"
        tools:layout_editor_absoluteX="104dp" />

    <Button
        android:id="@+id/bminus"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="86dp"
        android:text="-"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/bcoma"
        app:layout_constraintLeft_toRightOf="@+id/bcoma"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/bequals"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:text="="
        android:textSize="8sp"
        app:layout_constraintLeft_toRightOf="@+id/bmultiple"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBaseline_toBaselineOf="@+id/bmultiple" />

    <Button
        android:id="@+id/bmultiple"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="X"
        android:textSize="8sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b0" />

</android.support.constraint.ConstraintLayout>
